
@{
    ViewBag.Title = "PagoEfectuado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12 text-center">
        <br /> <br />

        @{
            if ((bool)ViewData["Status"])
            {
                <h1 class="text-success">Gracias!</h1>
                <i class="far fa-check-circle fa-9x text-success"></i>
                <h4>ID de Transaccion:   @ViewData["idTransaccion"]</h4>

                <br />
                <a href="@Url.Action("Index","Tienda")" class="btn btn-primary">Volver a la tienda</a>
            }
            else
            {
                <h1 class="text-danger">Lo sentimos</h1>
                <i class="far fa-exclamation-circle fa-9x text-success"></i>
                <h2 class="text-success">Gracias!</h2>

                <br />
                <a href="@Url.Action("Index","Tienda")" class="btn btn-primary">Volver a la tienda</a>
            }


        }

    </div>

</div>

@section scripts{

    <script>
        document.getElementById("buscador").setAttribute("hidden", "true")
    </script>

}

